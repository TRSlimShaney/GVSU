script.
    var id = #{id}
    var fname = #{fname}
    var lname = #{lname}
    var email = #{email}
    var img = #{img}
head
    link(rel='stylesheet', href='/styles/editBug.css')
body
    span.pageTitle Edit this user:
    br
    br
    form(action='/users/' + id + '/update', enctype='multipart/form-data', method='POST')
        span.title First Name:
        br
        input(type='text', name='fname', placeholder=fname, required='required')
        br
        span.user Last Name:
        br
        input(type='text', name='lname', placeholder=lname, required='required')
        br
        span.desc Email:
        br
        input(type='email', name='email', placeholder=email, required='required', size=30)
        br
        span.type Avatar:
        br
        input(type='file', accept='image/*', name='img', value='Upload Avatar')
        br
        br
        br
        input(type='submit', value='Submit')
        br
        br
        a(href='/users') Back
